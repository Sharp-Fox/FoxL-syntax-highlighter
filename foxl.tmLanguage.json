{
  "name": "FoxL",
  "scopeName": "source.foxl",
  "fileTypes": ["foxl"],
  "patterns": [
      {
          "include": "#comments"
      },
      {
          "include": "#variables"
      },
      {
          "include": "#functions"
      }
  ],
  "repository": {
      "comments": {
          "patterns": [
              {
                  "match": "//.*$",
                  "name": "comment.line.double-slash.foxl"
              }
          ]
      },
      "variables": {
          "patterns": [
              {
                  "match": "\\b(let|var)\\s+\\w+\\s*=\\s*\\[.*?\\];",
                  "name": "variable.other.array.foxl",
                  "captures": {
                      "1": {
                          "name": "keyword.declaration.foxl"
                      }
                  },
                  "patterns": [
                      {
                          "match": "\\d+",
                          "name": "constant.numeric.integer.foxl"
                      },
                      {
                          "match": "\"[^\"]+\"",
                          "name": "string.quoted.double.foxl"
                      }
                  ]
              }
          ]
      },
      "functions": {
          "patterns": [
              {
                  "match": "\\bfunc\\s+\\w+\\s*\\([^)]*\\)\\s*\\{[^}]*\\}",
                  "name": "entity.name.function.foxl",
                  "patterns": [
                      {
                          "match": "\\breturn\\b",
                          "name": "keyword.control.return.foxl"
                      },
                      {
                          "match": "\\b\\w+\\b",
                          "name": "variable.parameter.function.foxl"
                      }
                  ]
              }
          ]
      }
  }
}
