{
  "name": "FoxL",
  "fileTypes": ["foxl"],
  "scopeName": "source.foxl",
  "patterns": [
    {
      "name": "comment.line.double-slash.foxl",
      "match": "//.*?$",
      "captures": {
        "0": {"name": "punctuation.definition.comment.foxl"}
      }
    },
    {
      "name": "variable.other.foxl",
      "match": "\\b(let|var)\\s+\\w+\\b"
    },
    {
      "name": "string.quoted.double.foxl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.foxl",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "keyword.control.foxl",
      "match": "\\b(if|else)\\b"
    },
    {
      "name": "constant.numeric.foxl",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "constant.language.boolean.true.foxl",
      "match": "\\b(true)\\b"
    },
    {
      "name": "constant.language.boolean.false.foxl",
      "match": "\\b(false)\\b"
    },
    {
      "name": "support.function.foxl",
      "match": "\\b(write|read)\\b"
    },
    {
      "name": "entity.name.function.foxl",
      "match": "\\b\\w+\\b(?=\\s*\\()",
      "captures": {
        "0": {"name": "entity.name.function.foxl"}
      }
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "punctuation.definition.comment.foxl",
          "match": "//"
        }
      ]
    }
  }
}
